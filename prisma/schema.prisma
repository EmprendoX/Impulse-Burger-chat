// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Order {
  id                    String        @id @default(uuid())
  orderNumber           String        @unique
  customerName          String
  customerPhone         String
  customerToken         String        @unique
  courierToken          String        @unique
  paymentStatus         String        // PENDING, PAID, FAILED
  orderStatus           String        @default("CONFIRMED") // CONFIRMED, PREPARING, READY, ON_THE_WAY, DELIVERED
  total                 String
  paymentMethod         String
  address               String
  lastLatitude          Float?
  lastLongitude         Float?
  lastLocationAccuracy  Float?
  lastLocationUpdatedAt DateTime?
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt

  items       OrderItem[]
  locationPings LocationPing[]
  events      OrderEvent[]

  @@index([orderNumber])
  @@index([customerPhone])
  @@index([customerToken])
  @@index([courierToken])
}

model OrderItem {
  id        String   @id @default(uuid())
  orderId   String
  name      String
  quantity  Int
  createdAt DateTime @default(now())

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
}

model LocationPing {
  id        String   @id @default(uuid())
  orderId   String
  latitude  Float
  longitude Float
  accuracy  Float
  createdAt DateTime @default(now())

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
  @@index([createdAt])
}

model OrderEvent {
  id        String   @id @default(uuid())
  orderId   String
  eventType String   // CONFIRM_SENT, ON_THE_WAY_SENT
  createdAt DateTime @default(now())

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@unique([orderId, eventType])
  @@index([orderId])
}
